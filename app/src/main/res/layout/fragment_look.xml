<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/look_title_label"
        style="?android:listSeparatorTextViewStyle"
        />
    <EditText android:id="@+id/look_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/look_title_hint"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/look_details_label"
        style="?android:listSeparatorTextViewStyle"
        />
    <Button android:id="@+id/look_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
        />
    <CheckBox android:id="@+id/look_valuing"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:text="@string/look_valuing_label"
        />
</LinearLayout>